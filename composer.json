{
    "name": "booksey/customer-api",
    "description": "Customer API",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Bakosi PÃ©ter",
            "email": "booksey87@gmail.com"
        }
    ],
    "config": {
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "phpmd": "phpmd src/ text phpmd.xml",
        "stan": "phpstan analyse -c phpstan.neon src tests public config -l 9",
        "test": "phpunit --colors=always --filter GetActionTest",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-text",
        "test-coverage-html": "XDEBUG_MODE=coverage phpunit --coverage-text --coverage-html coverage.html",
        "check-all": [
            "@cs-check",
            "@phpmd",
            "@stan",
            "@test-coverage"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Test\\": "tests/"
        }
    },
    "require": {
        "aws/aws-sdk-php": "^3.278",
        "laminas/laminas-config": "^3.8",
        "laminas/laminas-config-aggregator": "^1.13",
        "laminas/laminas-diactoros": "^3.1",
        "php-di/php-di": "^7.0",
        "psr/container": "^1.1",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "pheromone/phpcs-security-audit": "^2.0",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^6.3"
    }
}
